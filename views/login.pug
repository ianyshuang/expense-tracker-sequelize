extends template/layout.pug

block content
  div(id="login-bg")
  div(class="row mt-5")
    div(class="col-md-4 col-3 mx-auto mt-4")
      div(class="card card-body")
        h1(class="text-center mb-3") 登入
        include include/message.pug
        form(action="/user/login" method="POST" onsubmit="return checkSubmit()")
          div(class="form-group")
            label(for="email") Email
            input(class="form-control" type="eamil" id="email" name="email" placeholder="Enter email")
            div
          div(class="form-group")
            label(for="password") 密碼
            input(class="form-control" type="password" id="password" name="password" placeholder="Enter password")
            div
            
          button(type="submit" class="btn btn-primary btn-block") Login
          // facebook login button
          a(href="/auth/facebook" class="btn btn-info btn-block") Facebook Login
        p(class="mt-4") 
          span 沒有帳號？
          | 
          a(href="/user/register") 立即註冊

append script
  script(src="/js/loginValidate.js")